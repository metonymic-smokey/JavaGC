<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.*?>
<fx:root type="BorderPane"
         maxHeight="-Infinity"
         maxWidth="-Infinity"
         minHeight="-Infinity"
         minWidth="-Infinity"
         xmlns="http://javafx.com/javafx/8.0.60"
         xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <Label fx:id="titleLabel"/>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Button fx:id="cancelButton" onAction="#cancel"/>
                <ProgressBar fx:id="progressIndicator" prefWidth="300"
                             progress="0.0"/>
                <Label fx:id="percentLabel"/>
                <Label fx:id="remainingTextLabel"/>
            </HBox>
        </VBox>
    </center>
</fx:root>
