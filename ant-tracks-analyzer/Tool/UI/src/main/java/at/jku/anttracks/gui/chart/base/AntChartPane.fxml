<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<fx:root type="BorderPane"
         prefHeight="-Infinity"
         prefWidth="-Infinity"
         minHeight="180"
         minWidth="250"
         styleClass="ant-chart-pane"
         xmlns="http://javafx.com/javafx/8.0.60"
         xmlns:fx="http://javafx.com/fxml/1">
    <bottom>
        <HBox spacing="15">
            <Pane prefWidth="30"></Pane>
            <CheckBox fx:id="zoomSynchronizedCheckbox" text="Sync zoom" selected="true"/>
            <Button fx:id="configureButton" text="Configure..."></Button>
        </HBox>
    </bottom>
</fx:root>